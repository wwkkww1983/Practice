<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="~/lib/easyui/themes/default/easyui.css" rel="stylesheet" />
    <link href="~/lib/easyui/themes/icon.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/edit.css" rel="stylesheet" />
    <link href="~/css/city-picker.css" rel="stylesheet" />

    @RenderSection("Head", required: false)
</head>
<body>
    @RenderBody()
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/easyui/jquery.easyui.min.js"></script>
    <script src="~/lib/easyui/locale/easyui-lang-zh_CN.js"></script>
    <script src="~/lib/layui/layui.all.js"></script>
    <script src="~/lib/jquery/jquery.cookie.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script type="text/javascript" src="~/lib/xheditor/xheditor-1.2.2.min.js"></script>
    <script type="text/javascript" src="~/lib/xheditor/xheditor_lang/zh-cn.js"></script>
    <script src="~/js/city-picker.data.js"></script>
    <script src="~/js/city-picker.js"></script>
    <script src="~/js/distpicker.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
